<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- property قابل override از application.properties -->
    <property name="LOG_FILE" value="${logging.file.name:-./logs/app.log}"/>
    <property name="LOG_LEVEL_COM_EXAMPLE" value="${logging.level.com.example.minierp:-INFO}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- نگهداری روزانه و 30 روزه -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.minierp" level="${LOG_LEVEL_COM_EXAMPLE}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- optional: show SQL if dev -->
    <logger name="org.hibernate.SQL" level="${logging.level.org.hibernate.SQL:WARN}"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="${logging.level.org.hibernate.orm.jdbc.bind:OFF}"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>